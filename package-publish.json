{
  "name": "code-manager",
  "displayName": "代码管理者 - Code Manager",
  "description": "智能代码书签和集合管理插件，提升大型项目的代码导航和组织效率",
  "version": "1.0.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "bookmark",
    "code navigation",
    "project management",
    "organization",
    "productivity"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#2c3e50",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeManager.toggleBookmarkPanel",
        "title": "切换书签面板",
        "category": "Code Manager"
      },
      {
        "command": "codeManager.toggleCollectionPanel", 
        "title": "切换集合面板",
        "category": "Code Manager"
      },
      {
        "command": "codeManager.addBookmark",
        "title": "添加书签",
        "category": "Code Manager"
      },
      {
        "command": "codeManager.addToCollection",
        "title": "添加到集合",
        "category": "Code Manager"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codeManager.addBookmark",
          "group": "navigation",
          "when": "editorTextFocus"
        }
      ],
      "explorer/context": [
        {
          "command": "codeManager.addToCollection",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeManager",
          "title": "代码管理者",
          "icon": "$(bookmark)"
        }
      ]
    },
    "views": {
      "codeManager": [
        {
          "id": "bookmarkPanel",
          "name": "书签管理",
          "when": "view == bookmarkPanel"
        },
        {
          "id": "collectionPanel", 
          "name": "集合管理",
          "when": "view == collectionPanel"
        }
      ]
    },
    "keybindings": [
      {
        "command": "codeManager.addBookmark",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "ts-loader": "^9.4.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/code-manager.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/code-manager/issues"
  },
  "homepage": "https://github.com/your-username/code-manager/blob/main/README.md",
  "license": "MIT"
}