{
  "name": "code-manager",
  "displayName": "代码管理者",
  "description": "智能代码书签和集合管理插件",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:bookmarkPanel",
    "onView:collectionPanel"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeManager.toggleBookmarkPanel",
        "title": "切换书签面板"
      },
      {
        "command": "codeManager.toggleCollectionPanel",
        "title": "切换集合面板"
      },
      {
        "command": "codeManager.addBookmark",
        "title": "添加书签"
      },
      {
        "command": "codeManager.createCollection",
        "title": "创建集合"
      },
      {
        "command": "codeManager.addToCollection",
        "title": "添加到集合"
      },
      {
        "command": "codeManager.openBookmark",
        "title": "打开书签"
      },
      {
        "command": "codeManager.deleteBookmark",
        "title": "删除书签"
      },
      {
        "command": "codeManager.deleteCollection",
        "title": "删除集合"
      },
      {
        "command": "codeManager.deleteFileFromCollection",
        "title": "从集合中移除"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codeManager.addBookmark",
          "group": "navigation"
        },
        {
          "command": "codeManager.createCollection",
          "group": "navigation"
        },
        {
          "command": "codeManager.addToCollection",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "codeManager.createCollection",
          "group": "navigation"
        },
        {
          "command": "codeManager.addToCollection",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "codeManager.deleteBookmark",
          "when": "view == bookmarkPanel",
          "group": "inline"
        },
        {
          "command": "codeManager.deleteCollection",
          "when": "view == collectionPanel && viewItem == collection",
          "group": "inline"
        },
        {
          "command": "codeManager.deleteFileFromCollection",
          "when": "view == collectionPanel && viewItem == file",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeManager",
          "title": "代码管理者",
          "icon": "$(bookmark)"
        }
      ]
    },
    "views": {
      "codeManager": [
        {
          "id": "bookmarkPanel",
          "name": "书签管理"
        },
        {
          "id": "collectionPanel",
          "name": "集合管理"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "ts-loader": "^9.4.2"
  }
}
